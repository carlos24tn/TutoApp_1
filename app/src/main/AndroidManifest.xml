<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pe.edu.unsa.dutic.tutoapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">

            <!--
            Para regresar a la version con el menu en el lado izquierdo ingresar el siguiente
            atributo en el activity anterior
            -->
            <!-- android:theme="@style/AppTheme.NoActionBar" -->

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DetalleActivity" />
        <activity android:name=".ListadoTutoresActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>