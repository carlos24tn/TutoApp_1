<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtItemListViewTutors_NombreTema"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/item_list_view_tutors_margin_down_nombre_tema"
                android:layout_marginLeft="@dimen/item_list_view_tutors_margin_left_nombre_tema"
                android:layout_marginRight="@dimen/item_list_view_tutors_margin_right_nombre_tema"
                android:layout_marginTop="@dimen/item_list_view_tutors_margin_top_nombre_tema"
                android:layout_weight="1"
                android:paddingTop="@dimen/item_list_view_tutors_padding_top_nombre_tema"
                android:text="TEMA: Tema del Curso"
                android:textColor="@color/color_item_list_view_course"
                android:textSize="@dimen/item_list_view_tutors_nombre_tema_texto" />

            <TextView
                android:id="@+id/txtItemListViewTutors_NombreDocente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/item_list_view_tutors_margin_down_nombre_docente"
                android:layout_marginLeft="@dimen/item_list_view_tutors_margin_left_nombre_docente"
                android:layout_marginRight="@dimen/item_list_view_tutors_margin_right_nombre_docente"
                android:layout_marginTop="@dimen/item_list_view_tutors_margin_top_nombre_docente"
                android:layout_weight="1"
                android:text="TUTOR: Nombre del Tutor"
                android:textColor="@color/color_item_list_view_course"
                android:textSize="@dimen/item_list_view_tutors_nombre_docente_texto" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtItemListViewTutors_TipoTutor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/item_list_view_tutors_margin_down_tipo"
                        android:layout_marginLeft="@dimen/item_list_view_tutors_margin_left_tipo"
                        android:layout_marginRight="@dimen/item_list_view_tutors_margin_right_tipo"
                        android:layout_marginTop="@dimen/item_list_view_tutors_margin_top_tipo"
                        android:layout_weight="1"
                        android:paddingTop="0px"
                        android:text="Docente / Estudiante"
                        android:textAlignment="center"
                        android:textColor="@color/color_item_list_view_course"
                        android:textSize="@dimen/item_list_view_tutors_tipo_tutor" />

                    <TextView
                        android:id="@+id/txtItemListViewTutors_EscuelaTutor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/item_list_view_tutors_margin_down_escuela_tutor"
                        android:layout_marginLeft="@dimen/item_list_view_tutors_margin_left_escuela_tutor"
                        android:layout_marginRight="@dimen/item_list_view_tutors_margin_right_escuela_tutor"
                        android:layout_marginTop="@dimen/item_list_view_tutors_margin_top_escuela_tutor"
                        android:layout_weight="1"
                        android:text="Escuela Profesional"
                        android:textAlignment="center"
                        android:textColor="@color/color_item_list_view_course"
                        android:textSize="@dimen/item_list_view_tutors_escuela_tutor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtItemListViewTutors_HorarioTutor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/item_list_view_tutors_margin_down_horario_tutor"
                        android:layout_marginLeft="@dimen/item_list_view_tutors_margin_left_horario_tutor"
                        android:layout_marginRight="@dimen/item_list_view_tutors_margin_right_horario_tutor"
                        android:layout_marginTop="@dimen/item_list_view_tutors_margin_top_horario_tutor"
                        android:layout_weight="1"
                        android:text="Horario:\nDia: dd -mm-yy"
                        android:textColor="@color/color_item_list_view_course" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
